<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/main_bg">


    <Button
        android:layout_marginTop="300dp"
        android:id="@+id/prox_button"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:background="@drawable/prox_btn"
        android:padding="40dp" />

    <Button
        android:id="@+id/find_button"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:background="@drawable/find_btn"
        android:layout_alignBottom="@+id/prox_button" />


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relativelayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="15dp">

        <ImageView
            android:id="@+id/balance_img"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/balance_btn"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/balance_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/balance_img"
            android:layout_alignTop="@+id/balance_img"
            android:layout_alignRight="@+id/balance_img"
            android:layout_alignBottom="@+id/balance_img"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="-13dp"
            android:layout_marginBottom="1dp"
            android:gravity="center"
            android:text="R$ 0.00"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="20dp"/>
    </RelativeLayout>

</LinearLayout>